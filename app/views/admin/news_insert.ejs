      <script>
        function validate() {
           var x = confirm("Bạn chắc chắn muốn thêm?");
          var regex = /\`|\~|\@|\#|\$|\%|\^|\&|\*|\(|\)|\+|\=|\[|\{|\]|\}|\||\\|\<|\>|\/|\""|\;/
          var title = document.getElementById('tieude').value;
          var content = document.getElementById('noidung').value;
          var status = false;
          //var span = document.createElement('span');
          if(x){
            if (title.length < 1 || regex.test(title)) {
              $("#titleAlert")               
             .fadeIn(); 
              document.getElementById("titleAlert").innerHTML = 
                "Nhập lại tiêu đề";
              $("#titleAlert")
             .delay(3200)
             .fadeOut(300);
              status = false;
            } else {
                
              status = true;
            }
            if (content.length < 1 || regex.test(content)) {
              $("#contentAlert")               
             .fadeIn(); 
              document.getElementById("contentAlert").innerHTML = "Nhập lại nội dung";        
              $("#contentAlert")
             .delay(3200)
             .fadeOut(300);   
              status = false;
            }
          }else{
            return status;
          }
          
          return status;
          //return false;
        } 
      </script>

